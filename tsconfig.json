{
  "compilerOptions": {
    "module": "commonjs",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2017"
  },
  "exclude": [
    "node_modules"
  ]
}
